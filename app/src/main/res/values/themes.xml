<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Memories" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/back</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomNoActionBarTheme"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="android:colorControlNormal">@color/primaryDark</item>
    </style>

    <style name="CustomToolbarTheme">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>